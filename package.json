{
  "name": "nodejs-starter",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "devDependencies": {
    "ts-node-dev": "^2.0.0"
  }
}